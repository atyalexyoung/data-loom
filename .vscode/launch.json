      "program": "${workspaceFolder}/tests/csharp/StressTestApp/bin/Debug/net8.0/StressTestApp.dll",
      "args": ["clients"],
      "cwd": "${workspaceFolder}/tests/csharp/StressTestApp",
      "console": "integratedTerminal"
    },
    {
      "name": "C# Frequency Test",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build",
      "program": "${workspaceFolder}/tests/csharp/StressTestApp/bin/Debug/net8.0/StressTestApp.dll",
      "args": ["frequency"],
      "cwd": "${workspaceFolder}/tests/csharp/StressTestApp",
      "console": "integratedTerminal"
    },

    // ====================
    // Go Server
